            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Cuerpo, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10" ">
                @Html.EditorFor(model => model.Cuerpo, new { htmlAttribute = new { @class = "form-control" } })
            </div>
        </div>

        <div class="from-group row">
            <div class="offset-sm-2 col-sm-10">
